<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="matrix"
        android:src="@drawable/backgroundapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#DADADA"
            android:baselineAligned="false"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="12sp"
            android:text="Préferences"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:textSize="36sp"
            android:visibility="visible"
            app:autoSizeTextType="none" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_weight="1.2"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="261dp"
                    android:layout_height="68dp"
                    android:background="#DADADA"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FF9800"
                        tools:text="Couleur" />

                    <Spinner
                        android:id="@+id/spinnerCouleur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:dropDownWidth="wrap_content"
                        android:entries="@array/Color"
                        android:minWidth="150dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="261dp"
                    android:layout_height="68dp"
                    android:background="#DADADA"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FF9800"
                        tools:text="Taille " />

                    <Spinner
                        android:id="@+id/spinnerTailleVetements"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/TailleVetement" />/>


                    <Spinner
                        android:id="@+id/spinnerTailleChaussures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/TailleChaussure"
                        android:minWidth="75dp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center_horizontal|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="261dp"
                    android:layout_height="68dp"
                    android:background="#DADADA"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#FF9800"
                        tools:text="Thème" />

                    <Spinner
                        android:id="@+id/spinnerTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/Thèmes"
                        android:minWidth="150dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="566dp"
            android:layout_weight="0.8"
            android:background="#DADADA"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="320dp"
                android:layout_height="48dp"
                android:gravity="bottom"
                android:text="TextView"
                android:textColor="#FF9800"
                android:textSize="24sp"
                tools:text="Adresse" />

            <EditText
                android:id="@+id/textAdresse"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Écris ton adresse postale ici"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="820dp"
            android:layout_weight="1.8"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonMajPreferences"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:text="Button"
                tools:text="Mettre à jour" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>